<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Beranda</title>
<!-- HEADER -->
<%- include('partials/header.ejs') %>
<!-- HEADER -->
    <div class="container">
        <div class="container mt-4">
            <div class="row">
              <div class="col-md-8">
                <!-- Tweets -->
                <div class="card mb-3">
                  <div class="card-body">
                    <% data.forEach(item => { %>
                        <% item.Posts.forEach(el => { %>
                            <div class="card">
                                <div class="card-header">
                                  <%= item.Profile.userName %>
                                </div>
                                <div class="card-body">
                                  <h5 class="card-title"><%= el.title %></h5>
                                  <p class="card-text" style="margin-top: 15px; margin-bottom: 8px;"> Description: <%= el.descPost %></p>
                                  <p><small><i class="fa fa-heart"></i> <%= el.likePost %></small></p>
                                  <a href="/comment" class="btn btn-outline-dark">Comment on this post!</a> 
                                </div>
                            </div>
                            <p></p>
                        <% }); %>
                    <% }); %>
                  </div>
                </div>
          
              </div>
              <div class="col-md-4">
                <div class="card">
                  <div class="card-body">
                    <h5 class="card-title" style="margin-bottom: 12px;">Find Our User list !</h5>
                    <ul class="list-group">
                        <% data.forEach(item => { %>
                            <% item.Posts.forEach(el => { %>
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                <%= item.Profile.userName %>
                                <span class="badge text-bg-primary rounded-pill"><%= el.likePost %></span>
                                </li>
                            <% }); %>
                          <% }); %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
        </div>
    </div>
</body>
</html>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Detail Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>
<body>
    <div class="container" style="margin-left: 300px;">
        <div class="container mt-4">
            <div class="row">
              <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="card">
                            <div class="card-header">
                                <%= data2.userName %>
                            </div>
                            <div class="card-body">
                                <h5 class="card-title"><%= data.title %></h5>
                                <p class="card-text" style="margin-top: 15px; margin-bottom: 8px;"> Description: <%= data.descPost %></p>
                                <p><small><a href="/likePost/<%= data.UserId %>"><i class="fa fa-heart"></i></a> 
                                    <%= data.likePost %> 
                                </small></p>
                                <div class="mt-4">
                                    <h6>Komentar:</h6>
                                    <ul class="list-group">
                                      <!-- Contoh komentar -->
                                      <li class="list-group-item">
                                        <p><b><%= data2.userName %></b></p>
                                        <% data.Comments.forEach(item => { %>
                                            <p><%= item.descComment %></p>
                                            <p><small><a href="/likeComment/<%= data.UserId %>"><i class="fa fa-heart"></i></a> 
                                                <%= item.likeComment %> 
                                            </small> <a href="/delete/<%= item.Home.CommentId %>"><i class="material-icons" style="margin-left: 20px;"><small>&#xe872;</small></i></a></p>
                                        <% }); %>
                                      </li>
                                    </ul>
                                </div>
                                <a href="/comment/<%= data.UserId %>" class="btn btn-outline-dark" style="margin-top: 15px;">Tambahkan Komentar</a>
                            </div>
                        </div>
                        <p></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>